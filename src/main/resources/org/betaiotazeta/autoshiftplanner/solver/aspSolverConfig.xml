<?xml version="1.0" encoding="UTF-8"?>

<solver xmlns="https://www.optaplanner.org/xsd/solver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://www.optaplanner.org/xsd/solver https://www.optaplanner.org/xsd/solver/solver.xsd">

    <environmentMode>REPRODUCIBLE</environmentMode>

    <!-- Domain model configuration -->
    <solutionClass>org.betaiotazeta.autoshiftplanner.Solution</solutionClass>
    <entityClass>org.betaiotazeta.autoshiftplanner.ShiftAssignment</entityClass>

    <!-- Score configuration -->
    <scoreDirectorFactory>
        <easyScoreCalculatorClass>org.betaiotazeta.autoshiftplanner.AspEasyScoreCalculator</easyScoreCalculatorClass>
        <initializingScoreTrend>ANY</initializingScoreTrend>
    </scoreDirectorFactory>

    <!-- Optimization algorithms configuration -->
    <termination>
        <secondsSpentLimit>180</secondsSpentLimit>
        <bestScoreLimit>0hard/0soft</bestScoreLimit>
    </termination>

    <!-- constructionHeuristic phase -->
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
        <cartesianProductMoveSelector>                
                <changeMoveSelector>
                    <filterClass>org.betaiotazeta.autoshiftplanner.ForbiddenCellSelectionFilter</filterClass>
                    <valueSelector variableName="timeGrain"/>
                </changeMoveSelector>
                <changeMoveSelector>
                    <valueSelector variableName="shiftDuration"/>
                </changeMoveSelector>            
        </cartesianProductMoveSelector>
    </constructionHeuristic>

    <!-- localSearch phase -->
    <localSearch>                    
        <unionMoveSelector>
            <changeMoveSelector>
                 <filterClass>org.betaiotazeta.autoshiftplanner.ForbiddenCellSelectionFilter</filterClass>
            </changeMoveSelector>

            <swapMoveSelector>
            </swapMoveSelector>
            
            <pillarChangeMoveSelector>
                <valueSelector variableName="timeGrain"/>
            </pillarChangeMoveSelector>
            <pillarChangeMoveSelector>
                <valueSelector variableName="shiftDuration"/>
            </pillarChangeMoveSelector>
            
            <cartesianProductMoveSelector>
                <changeMoveSelector>
                    <filterClass>org.betaiotazeta.autoshiftplanner.ForbiddenCellSelectionFilter</filterClass>                 
                </changeMoveSelector>
                <changeMoveSelector>
                    <filterClass>org.betaiotazeta.autoshiftplanner.ForbiddenCellSelectionFilter</filterClass>                 
                </changeMoveSelector>
            </cartesianProductMoveSelector>
            
        </unionMoveSelector>
    </localSearch>
      
</solver>